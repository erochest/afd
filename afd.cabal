name:                afd
version:             0.0.0.0
synopsis:            Gathering data on Wikipedia Articles for Deletion.
description:         Gathering data on Wikipedia Articles for Deletion.
license:             Apache-2.0
license-file:        LICENSE
author:              Eric Rochester
maintainer:          erochest@gmail.com
copyright:           2016 Eric Rochester
category:            Data
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     ArticlesDel.Actions.ImportXml
                     , ArticlesDel.Actions.Init
                     , ArticlesDel.Actions.SampleXml
                     , ArticlesDel.Types
                     , ArticlesDel.Utils
  other-modules:       ArticlesDel.Actions.ImportXml.Types
                     , ArticlesDel.Actions.SampleXml.Types
                     , ArticlesDel.Types.Internal
  -- other-extensions:
  build-depends:       base >=4.8 && <4.9
                     , aeson
                     , bifunctors
                     , bytestring
                     , conduit
                     , conduit-combinators
                     , conduit-extra
                     , containers
                     , errors
                     , foldl
                     , lens
                     , monad-logger
                     , mwc-random
                     , persistent
                     , persistent-sqlite
                     , persistent-template
                     , primitive
                     , text
                     , text-format
                     , time
                     , transformers
                     , unordered-containers
                     , xml-conduit
                     , xml-types
  hs-source-dirs:      src
  default-language:    Haskell2010

executable afd
  main-is:             Main.hs
  other-modules:       Actions
                     , Opts
                     , Types
  -- other-extensions:
  build-depends:       base >=4.8 && <5
                     , afd
                     , errors
                     , text
                     , optparse-applicative
                     , errors
  hs-source-dirs:      app
  ghc-options:         -threaded
                       -rtsopts
                       "-with-rtsopts=-N"
                       -- -fprof-auto "-with-rtsopts=-N -p -s -h -i0.1"
  default-language:    Haskell2010

test-suite afd-specs
  type:                exitcode-stdio-1.0
  ghc-options:         -threaded -rtsopts
  hs-source-dirs:      specs
  main-is:             Specs.hs
  other-modules:         ArticlesDel.TypesSpec
  build-depends:         base
                       , afd
                       , errors
                       , lens
                       , text
                       , QuickCheck
                       , smallcheck
                       , hspec
  default-language:    Haskell2010

benchmark afd-bench
  type:                exitcode-stdio-1.0
  ghc-options:         -threaded
                       -rtsopts
  hs-source-dirs:      bench
  main-is:             Bench.hs
  -- other-modules:
  build-depends:         base
                       , afd
                       , criterion
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/erochest/afd
